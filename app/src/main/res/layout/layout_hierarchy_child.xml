<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_horizontal_top_line_left"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black_tint5" />

        <View
            android:id="@+id/v_horizontal_top_line_right"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black_tint5" />

    </LinearLayout>



    <View
        android:layout_width="2dp"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_tint5" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boundary_background"
        android:padding="@dimen/dp_5">

        <com.beingmomin.mominapp.customs.customAppTextViews.CustomAppTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/tv_person_name"
            android:maxWidth="@dimen/dp_40"
            android:maxLines="2"
            android:text="Sattar Mohammad"
            android:textColor="@color/black_tint4"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>

    <View
        android:id="@+id/v_vertical_bottom_line"
        android:layout_width="2dp"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_tint5" />


</LinearLayout>