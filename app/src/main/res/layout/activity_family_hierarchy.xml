<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.appModule.familyHierarchy.FamilyHierarchyActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.beingmomin.mominapp.ui.appModule.familyHierarchy.FamilyHierarchyViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_show_hierarchy"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolbarDarkOverflow"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/ll_back_show_task"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_layout_background"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <com.beingmomin.mominapp.customs.customAppTextViews.CustomAppTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Hierarchy"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_text_size"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="14dp" />


        </androidx.appcompat.widget.Toolbar>

        <com.otaliastudios.zoom.ZoomLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical|horizontal"
            app:hasClickableChildren="true"
            app:horizontalPanEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_show_hierarchy"
            app:maxZoom="3.0"
            app:maxZoomType="zoom"
            app:minZoom="0.7"
            app:minZoomType="zoom"
            app:overPinchable="true"
            app:overScrollHorizontal="true"
            app:overScrollVertical="true"
            app:verticalPanEnabled="true"
            app:zoomEnabled="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cnstrt_hierarchy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

        </com.otaliastudios.zoom.ZoomLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>