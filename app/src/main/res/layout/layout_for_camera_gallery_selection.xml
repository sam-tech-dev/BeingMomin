<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.beingmomin.mominapp.customs.customAppTextViews.CustomAppTextViewMedium
        android:id="@+id/customAppTextViewMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_25"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Select Profile from"
        android:textColor="@color/black_effective"
        android:textSize="@dimen/dp_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_header_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customAppTextViewMedium" />

    <LinearLayout
        android:id="@+id/ll_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_25"
        android:paddingVertical="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/v_header_divider">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_photo_gallery_black_24dp" />

        <com.beingmomin.mominapp.customs.customAppTextViews.CustomAppTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="Gallery"
            android:textColor="@color/black_effective"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>


    <View
        android:id="@+id/v_gallery_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_gallery" />


    <LinearLayout
        android:id="@+id/ll_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingHorizontal="@dimen/dp_25"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/v_gallery_divider">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera_black_24dp" />

        <com.beingmomin.mominapp.customs.customAppTextViews.CustomAppTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="Camera"
            android:textColor="@color/black_effective"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>