<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/sp_locality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/sp_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_arrowColor="@color/brown_tint1"
        app:ms_arrowSize="16dp"
        app:ms_baseColor="@color/spinner_base_color"
        app:ms_enableErrorLabel="false"
        app:ms_enableFloatingLabel="true"
        app:ms_errorColor="@color/red_dark"
        app:ms_floatingLabelColor="@color/brown_tint1"
        app:ms_floatingLabelText="Select profession"
        app:ms_hint="Select professional"
        app:ms_hintColor="@color/brown_tint1"
        app:ms_multiline="false"
        app:ms_thickness="1dp" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/sp_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sp_locality"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_arrowColor="@color/brown_tint1"
        app:ms_arrowSize="16dp"
        app:ms_baseColor="@color/spinner_base_color"
        app:ms_enableErrorLabel="false"
        app:ms_enableFloatingLabel="true"
        app:ms_errorColor="@color/red_dark"
        app:ms_floatingLabelColor="@color/brown_tint1"
        app:ms_floatingLabelText="Select profession"
        app:ms_hint="Select Male"
        app:ms_hintColor="@color/brown_tint1"
        app:ms_multiline="false"
        app:ms_thickness="1dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/et_search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="enter name"
        android:textSize="@dimen/dp_14"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toStartOf="@+id/pb_search_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_locality" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_searched_persons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_text"
        app:layout_goneMarginBottom="8dp" />

    <ProgressBar
        android:id="@+id/pb_search_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:indeterminateTint="@color/colorPrimary"
        android:progressTint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_search_text" />


</androidx.constraintlayout.widget.ConstraintLayout>